@model FlashcardsApp.Models.FlashcardCollection<Flashcards>
@{
    ViewData["Title"] = "Index";
}

<h1>Upload and view flashcards from a text file</h1>

<form method="post" enctype="multipart/form-data" asp-controller="FileReader" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload a text file:</p>
            <input type="file" name="files" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>

<div>
    <h2>Collection Name: @Model.CollectionName</h2>
    <p>Category: @Model.Category</p>

    @foreach (var flashcard in Model.Flashcards)
    {
        <div>
            <h3>Question: @flashcard.Question</h3>
            <p>Answer: @flashcard.Answer</p>
        </div>
    }
</div>
