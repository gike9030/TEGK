@model FlashcardsApp.Models.FlashcardCollection

@{
    ViewData["Title"] = "Create Flashcard Collection";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Create a New Flashcard Collection</h1>
                </div>
                <div class="card-body">
                    <form asp-action="CreateFlashcardCollection" method="post">
                        <div class="form-group">
                            <label asp-for="CollectionName" class="control-label">Collection Name</label>
                            <input asp-for="CollectionName" class="form-control" />
                            <span asp-validation-for="CollectionName" class="text-danger"></span>
                        </div

                        <!-- Add Collection button next to Add Flashcard button -->
                        <button type="submit" class="btn btn-success btn-block ml-2">Create Collection</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

