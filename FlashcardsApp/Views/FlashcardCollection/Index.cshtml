        display: flex;
        flex-direction: column;
        margin-top: 15px;
    }

    .add-comment-section textarea {
        width: 100%;
        height: 70px;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        resize: none; 
    }

    .add-comment-section button {
        width: auto;
        padding: 8px 16px;
        border: none;
        border-radius: 8px;
        background-color: #007bff;
        color: white;
