@model IEnumerable<FlashcardsApp.Models.FlashcardCollection<Flashcards>>

@{
    ViewData["Title"] = "Flashcard Collections";
}

@{
    var categories = Enum.GetNames(typeof(FlashcardsApp.Models.Category));
}

<form asp-action="Index" method="get" class="mb-3">
    <label for="sortByCategory">Sort by Category:</label>
    <select id="sortByCategory" name="sortByCategory" onchange="this.form.submit();">
        <option value="">--View All Categories--</option>
        @foreach (var category in categories)
        {
            if (category == ViewBag.CurrentSort)
            {
                <option value="@category" selected>@category</option>
            }
            else
            {
                <option value="@category">@category</option>
            }
        }
    </select>
</form>



<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Collection Name</th>
            <th>Number of Flashcards</th>
            <th>Created Date</th>
            <th>Category</th>
            <th>Hearts</th>
            <th>Haha</th>
            <th>Like</th>
            <th>Angry</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var collection in Model)
        {
            <tr>
                <td>@collection.CollectionName</td>
                <td>@(collection.Flashcards?.Count ?? 0)</td>
                <td>@collection.CreatedDateTime.ToShortDateString()</td>
                <td>@collection.Category</td>
                <td>@(collection.Reactions.FirstOrDefault(r => r.Type == FlashcardsApp.Models.ReactionType.Hearts)?.Count ?? 0)</td>
                <td>@(collection.Reactions.FirstOrDefault(r => r.Type == FlashcardsApp.Models.ReactionType.Haha)?.Count ?? 0)</td>
                <td>@(collection.Reactions.FirstOrDefault(r => r.Type == FlashcardsApp.Models.ReactionType.Like)?.Count ?? 0)</td>
                <td>@(collection.Reactions.FirstOrDefault(r => r.Type == FlashcardsApp.Models.ReactionType.Angry)?.Count ?? 0)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@collection.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="ViewCollection" asp-route-id="@collection.Id" class="btn btn-info btn-sm">View</a>
                    <form asp-action="Delete" asp-route-id="@collection.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this collection?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateFlashcardCollection" class="btn btn-success">Create New Collection</a>
